{
    "cucumberautocomplete.syncfeatures": "features/**/*.feature",
    "cucumberautocomplete.steps": [
        "common/steps/*.py",
        ".venv/Lib/site-packages/toolium_telefonica/behave/steps/**/*.py"
    ],
    "cucumberautocomplete.gherkinDefinitionPart": "@(given|when|then|step|behave_step)\\(",
    "cucumberautocomplete.customParameters": [
        {
            "parameter": "(u'",
            "value": "('"
        }
    ],
    "cucumberautocomplete.strictGherkinCompletion": false,
    "cucumberautocomplete.strictGherkinValidation": false,
    "cucumberautocomplete.onTypeFormat": true,
    "editor.quickSuggestions": {
        "comments": false,
        "strings": true,
        "other": true
    },
    "python.formatting.autopep8Args": [
        "--max-line-length=120"
    ],
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": false,
    "python.linting.flake8Args": [
        "--max-line-length=120"
    ],
    "logViewer.watch": [
        {
            "groupName": "Behave",
            "watches": [
                {
                    "title": "acceptance_int",
                    "pattern": "_output/acceptance_int.log"
                }
            ]
        }
    ],
    "gherkiner.padding.symbol": "space",
    "gherkiner.padding.default": 4,
    "gherkiner.padding.table": 10,
    "gherkiner.formatOnSave": false,
    "gherkiner.paddings": [
        {
            "keyword": "Feature",
            "padding": 0
        },
        {
            "keyword": "Scenario",
            "padding": 2
        },
        {
            "keyword": "Given",
            "padding": 4
        },
        {
            "keyword": "When",
            "padding": 5
        },
        {
            "keyword": "Then",
            "padding": 5
        },
        {
            "keyword": "And",
            "padding": 6
        },
        {
            "keyword": "Actions",
            "padding": 2
        },
        {
            "keyword": "Examples",
            "padding": 4
        },
        {
            "keyword": "#",
            "padding": 0
        }
    ]
}